.photo-wrapper {
  position: relative;
}

.copyrighted__overlay,
.copyrighted__inner {
  bottom: 0;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
}

.copyrighted__overlay {
  z-index: 100;
}

.copyrighted__inner {
  align-items: center;
  background-color: rgba(0, 0, 0, .9);
  color: #fff;
  cursor: default;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  user-select: none;
  z-index: 110;
}

.copyrighted__message {
  font-size: 2em;
  margin-bottom: 40px;
}

.copyrighted__button {
  background-color: #f44336;
  border: none;
  border-radius: 3px;
  color: #fff;
  font-weight: bold;
  outline: none;
  padding: 1em 2em;
  text-transform: uppercase;

  &:hover {
    background-color: darken(#f44336, 10);
  }
}
